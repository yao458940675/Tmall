<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.java10.Tmall.model.mapper.OrderMapper" >
	
	
	<select id="selectAllOrder" resultMap="OrderRes">
		select o.id id, o.orderCode orderCode,o.ostatus ostatus,ord.itemPrice itemPrice,ord.number number,o.receiver receiver,o.createDate createDate,
		o.payDate payDate,o.deliveryDate deliveryDate,o.confirmDate confirmDate, pro.id id,p.name name
		 from order_ o,orderitem ord,product p,productimage pro
		where o.id=ord.oid and p.id=ord.pid and pro.pid=p.id 
	</select>
	<resultMap type="Order_" id="OrderRes">
	<result column="id" property="id"/>
	<result column="orderCode" property="orderCode"/>
	<result column="ostatus" property="ostatus"/>
	<result column="receiver" property="receiver"/>
	<result column="createDate" property="createDate"/>
	<result column="payDate" property="payDate"/>
	<result column="deliveryDate" property="deliveryDate"/>
	<result column="confirmDate" property="confirmDate"/>
	
	<collection property="oi" ofType="OrderItem" >
	<result column="itemPrice" property="itemPrice"/>
	<result column="number" property="number"/>
	
	<association property="p" javaType="Product" resultMap="PRes"></association>
	
	
	</collection>
	</resultMap>
	
	
	<resultMap type="Product" id="PRes">
	<result column="name" property="name"/>
	<association property="pro" javaType="ProductImage" resultMap="PIRes"></association>
	
	</resultMap>
	<resultMap type="ProductImage" id="PIRes">
	<result column="id" property="id"/>
	</resultMap>
</mapper>













